{
  "name": "web-game",
  "version": "1.0.0",
  "description": "A web-based game project using TypeScript and Node.js",
  "main": "src/server/app.ts",
  "scripts": {
    "start": "node dist/server/app.js",
    "build": "npm test && npm run copy:css && tsc && webpack",
    "build:server": "tsc",
    "build:client": "webpack",
    "copy:css": "node -e \"require('fs').copyFileSync('src/client/styles/main.css', 'public/styles/main.css')\"",
    "watch:css": "chokidar \"src/client/styles/**/*.css\" -c \"npm run copy:css\"",
    "watch:server": "tsc --watch",
    "watch:client": "webpack --watch",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:server\" \"npm run watch:client\"",
    "server": "nodemon --watch dist/server dist/server/app.js",
    "browser-sync": "browser-sync start --config bs-config.js",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm run server\" \"npm run browser-sync\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^16.11.7",
    "browser-sync": "^3.0.4",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/web-game.git"
  },
  "keywords": [
    "game",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/web-game/issues"
  },
  "homepage": "https://github.com/yourusername/web-game#readme"
}
